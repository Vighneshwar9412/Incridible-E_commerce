@model IEnumerable<Wanc.Models.Banner>
@using Wanc.Models
@{
    ViewBag.Title = "ViewBanner";
    Layout = "~/shared/_AdminLayout1.cshtml";
    var Data = (List<Banner>)ViewBag.Data;
}

<section class="wrapper">

    <div class="breadcrumb-line">
        <ul class="breadcrumb">
            <li><a href="/Admin/Dashboard">Dashboard</a></li>
            <li class="active"><a href="#">View All Banners</a></li>
        </ul>
    </div>
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title" style="font-weight:bold;padding-top:15px">View All Banners</h3>
        </div>
        <div class="panel-body" style="overflow-x:scroll;">

            @using (Html.BeginForm("ViewBanner", "Admin", FormMethod.Post, new { @enctype = "multipart/form-data" }))
            {

            }


        </div>

        <table class="table" id="sarvesh1">
            <thead>
                <tr>
                    <th>S.No</th>
                    <th>Url</th>
                    <th>Images</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @{ int i = 0;}
                @foreach (var item in Data)
                {
                    i = i + 1;
                    <tr>

                        <td>@i</td>
                        <td>@item.URL</td>
                        <td><img src="@item.Images" style="width:70px;height:70px"></td>
                        <td>
                            <a href="/Admin/DelBanner?Id=@item.ID" onclick="return confirm('Are You Sure to Delete');" class="btn btn-danger btn-sm">Delete</a>
                        </td>
                        <td>
                            <a href="/Admin/EditBanner?Id=@item.ID" class="btn btn-warning btn-sm">Edit</a>
                        </td>
                    </tr>
                }


            </tbody>
        </table>

    </div>


</section>
