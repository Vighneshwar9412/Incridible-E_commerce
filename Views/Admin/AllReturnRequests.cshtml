@using Wanc.Models
@{
    ViewBag.Title = "AllReturnRequests";
    Layout = "~/shared/_AdminLayout1.cshtml";
    var data = (List<MyReturnProductsDto>)ViewBag.data;
}

<style>
    th {
        text-align: center;
    }

    td {
        text-align: center;
    }
</style>
<section class="wrapper">
    <div class="breadcrumb-line">
        <ul class="breadcrumb">
            <li><a href="/Admin/Dashboard">Dashboard</a></li>
            <li class="active"><a href="#">Return Order Details</a></li>
        </ul>
    </div>

    <div class="panel panel-default">
        <div class="panel-heading">

            <h6 class="panel-title" style="font-weight:bold; padding-top: 10px;">Return Order Details</h6>
        </div>
        <div class="tab-content">
            <div class="tab-pane active fade in" id="inside_panel">
                <div class="panel panel-default">
                    <div class="table-responsive">
                        @if (data != null)
                        {
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Return Date</th>
                                        <th>Order Date</th>
                                        <th>Order ID</th>
                                        <th>Pro ID</th>
                                        <th>Pro Name</th>
                                        <th>Seller-ID</th>
                                        <th>Buyer-ID</th>
                                        <th>Qty</th>
                                        <th>Net Amount</th>
                                        <th>Payment Type</th>
                                        <th>Transaction-ID</th>
                                        <th>Return Reason</th>
                                        <th>Return Proof</th>
                                        <th>Cancelled Return</th>
                                        <th colspan="4">Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                            int i = 0;
                                    }
                                    @foreach (var item in data)
                                    {
                                        i++;
                                        <tr>
                                            <td>@i</td>
                                            <td>@item.ReturnDate</td>
                                            <td>@item.CreateDate</td>
                                            <td>@item.OrderIdN</td>
                                            <td>@item.ProductId</td>
                                            @if (item.Productname.Length >= 12)
                                            {
                                                <td>@item.Productname.Substring(0, 12)</td>
                                            }
                                            else
                                            {
                                                <td>@item.Productname</td>
                                            }
                                            <td>@item.seller_SelID</td>
                                            <td>@item.Buyer_selfID</td>
                                            <td>@item.Quantity</td>
                                            <td>@item.TotalAmount</td>
                                            <td>@item.PaymentMethod</td>
                                            <td></td>
                                            <td>@item.ReturnReason</td>
                                            <td>
                                                <a href="~/Images/@item.Returnproof"> <img src="~/Images/@item.Returnproof" style="height: 90px; width: 90px;margin-top: -29px;" /></a>
                                            </td>
                                            <td>
                                                @item.isReturnApproved
                                            </td>
                                            @if (item.isReturnApproved == "APPROVED")
                                            {
                                                <td><a href="~/Admin/BlockOrApproveProducts?Id=@item.Od_ID&type=ReturnReject" onclick="return confirm('Do You Want To Reject?')" class=" btn btn-info btn-sm">Approved </a></td>
                                            }
                                            else if (item.isReturnApproved == "REJECTED")
                                            {
                                                <td><a href="~/Admin/BlockOrApproveProducts?Id=@item.Od_ID&type=ReturnAccept" onclick="return confirm('Do You Want To Approve?')" class=" btn btn-danger btn-sm">Rejected </a></td>
                                            }
                                            else
                                            {
                                                <td><a href="~/Admin/BlockOrApproveProducts?Id=@item.Od_ID&type=ReturnAccept" onclick="return confirm('Do You Want To Approve?')" class=" btn btn-info btn-sm">Approve </a></td>
                                                <td><a href="~/Admin/BlockOrApproveProducts?Id=@item.Od_ID&type=ReturnReject" onclick="return confirm('Do You Want To Reject?')" class=" btn btn-danger btn-sm">Reject </a></td>
                                            }


                                        </tr>
                                    }
                                </tbody>
                            </table>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
