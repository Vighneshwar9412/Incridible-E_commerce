@using Wanc.Models
@{
    ViewBag.Title = "RefundRequest";
    Layout = "~/shared/_AdminLayout1.cshtml";
    var data = (List<RefundOrdersDTO>)ViewBag.data;
}

<style>
    th {
        text-align: center;
    }

    td {
        text-align: center;
    }
</style>
<section class="wrapper">
    <div class="breadcrumb-line">
        <ul class="breadcrumb">
            <li><a href="/Admin/Dashboard">Dashboard</a></li>
            <li class="active"><a href="#">Refund Request Details</a></li>
        </ul>
    </div>

    <div class="panel panel-default">
        <div class="panel-heading">

            <h6 class="panel-title" style="font-weight:bold; padding-top: 10px;">Refund Request Details</h6>
        </div>
        <div class="tab-content">
            <div class="tab-pane active fade in" id="inside_panel">
                <div class="panel panel-default">
                    <div class="table-responsive">
                        @if (data != null)
                        {
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Refund Request</th>
                                        <th>Order Date</th>
                                        <th>Order ID</th>
                                        <th>Pro ID</th>
                                        <th>Pro Name</th>
                                        <th>Seller-ID</th>
                                        <th>Buyer-ID</th>
                                        <th>Qty</th>
                                        <th>Net Amount</th>
                                        <th>Payment Type</th>
                                        <th>Transaction-ID</th>
                                        <th>Cancelled refund</th>
                                        <th colspan="4">Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                            int i = 0;
                                    }
                                    @foreach (var item in data)
                                    {
                                        i++;
                                        <tr>
                                            <td>@i</td>
                                            <td>@item.ReturnDate</td>
                                            <td>@item.CreateDate</td>
                                            <td>@item.OrderIdN</td>
                                            <td>@item.ProductId</td>
                                            @if (item.Productname.Length >= 12)
                                            {
                                                <td>@item.Productname.Substring(0, 12)</td>
                                            }
                                            else
                                            {
                                                <td>@item.Productname</td>
                                            }
                                            <td>@item.seller_SelID</td>
                                            <td>@item.Buyer_selfID</td>
                                            <td>@item.Quantity</td>
                                            <td>@item.TotalAmount</td>
                                            <td>@item.PaymentMethod</td>
                                            <td>@item.refundapproveStatus</td>
                                            <td></td>
                                            <td>@item.RefundStatus</td>

                                            <td><a href="/Admin/BlockOrApproveProducts?Id=@item.Od_ID&type=RefundrequestYES" onclick="return confirm('Do You Want To Approve?')" class=" btn btn-info btn-sm">Approved </a></td>

                                            <td><a href="/Admin/BlockOrApproveProducts?Id=@item.Od_ID&type=RefundrequestNO" onclick="return confirm('Do You Want To Reject?')" class=" btn btn-danger btn-sm">Rejected </a></td>



                                        </tr>
                                    }
                                </tbody>
                            </table>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
