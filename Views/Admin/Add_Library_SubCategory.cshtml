@model Wanc.Models.subcategory
@{
    ViewBag.Title = "Add_Library_SubCategory";
    Layout = "~/shared/_AdminLayout1.cshtml";
}

<section class="wrapper">

    <div class="breadcrumb-line">
        <ul class="breadcrumb">
            <li><a href="/Admin/Dashboard">Dashboard</a></li>
            <li class="active"><a href="#">Add  SubCategory</a></li>
        </ul>
    </div>
    <div class="form-horizontal">
        <div class="row">
            <div class="col-md-8">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-body">Add New SubCategory</h3>
                    </div>
                    <div class="panel-body">
                        @using (Html.BeginForm("Add_Library_SubCategory", "Admin", FormMethod.Post))
                        {
                            <form>
                                @Html.AntiForgeryToken()
                                <label class="danger" style="color:blue;font-size:13px">@TempData["msg"]</label>

                                <div class="form-group">
                                    <label class="col-md-4">Select  Category:</label>
                                    <div class="col-md-8">
                                        @Html.DropDownListFor(a => a.catid, new SelectList(ViewBag.Cate, "ID", "Name"), new { @class = "form-control", @required = "required" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-md-4">Enter SubCategory:</label>
                                    <div class="col-md-8">
                                        <input type="text" name="SubCategoryName" class="form-control" required />
                                    </div>
                                </div>
                                <br />

                                <div class="form-group" align="center">
                                    <button type="submit" class="btn btn-success">Submit</button>
                                    <a href="/admin/Dashboard" class="btn btn-primary">Cancel</a>
                                </div>
                            </form>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
