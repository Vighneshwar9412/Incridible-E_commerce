@{
    ViewBag.Title = "addnotification";
    Layout = "~/shared/_AdminLayout1.cshtml";
}

<h2>addnotification</h2><section class="wrapper">

    <div class="breadcrumb-line">
        <ul class="breadcrumb">
            <li><a href="/Admin/dashboard">Dashboard</a></li>
            <li class="active"><a href="#">Add Notification</a></li>
        </ul>
    </div>
    @if (TempData["msg"] != null)
    {
        @Html.Raw(TempData["msg"]); TempData["msg"] = null;
    }
    <div class="form-horizontal">
        <div class="row">
            <div class="col-md-8">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h6 class="panel-title" style="color:green">
                            <i class="icon-bubble4"></i>
                        </h6>
                    </div>
                    <div class="panel-body">
                        <form method="post" action="~/Admin/addnotification">
                            <label class="danger" style="color:blue;font-size:13px">@TempData["msg"]</label>
                            <div class="form-group">
                                <label class="col-md-4">Select Users:</label>
                                <div class="col-md-8">
                                    <select name="MessageFor" class="form-control" required>
                                        <option value="">--Select --</option>
                                        <option value="Buyers">Buyers</option>
                                        <option value="Sellers">Sellers</option>
                                    </select>
                                </div>

                            </div>

                            <div class="form-group">
                                <label class="col-md-4">Enter Message:</label>
                                <div class="col-md-8">
                                    <textarea class="form-control" name="Notification" required></textarea>

                                </div>
                            </div>
                            <div class="form-actions">
                                <button type="submit" class="btn btn-primary btn-sm">Submit</button>

                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
