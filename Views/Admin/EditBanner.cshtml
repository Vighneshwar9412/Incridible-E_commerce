@model Wanc.Models.Banner
@{
    ViewBag.Title = "EditBanner";
    Layout = "~/shared/_AdminLayout1.cshtml";
}

<section class="wrapper">

    <div class="breadcrumb-line">
        <ul class="breadcrumb">
            <li><a href="/Admin/Dashboard">Dashboard</a></li>
            <li class="active"><a href="#">Edit  Banner</a></li>
        </ul>
    </div>
    <div class="form-horizontal">
        <div class="row">
            <div class="col-md-8">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-body">Edit New Banner</h3>
                    </div>
                    <div class="panel-body">

                        <form action="/Admin/EditBanner" method="post" enctype="multipart/form-data">
                            @Html.HiddenFor(a => a.ID)
                            @Html.HiddenFor(a => a.Images)
                            <div class="form-group">
                                <label class="col-md-2">Url:</label>
                                <center>
                                    <div class="col-md-8">
                                        <input type="text" src="~/IndexBanners/@Model.URL" name="URL" class="form-control" />
                                    </div>
                                </center>
                            </div>
                            <div class="form-group">
                                <label class="col-md-2">BannerImage:</label>
                                <center>
                                    <div class="col-md-8">
                                        <img src="~/IndexBanners/@Model.Images" name="Images" style="width:100px; height:100px" class="" />
                                    </div>
                                </center>
                            </div>
                            <div class="form-group">
                                <label class="col-md-4">Enter Banner Image:</label>
                                <div class="col-md-8">
                                    <input type="file" name="file" required class="form-control" />
                                </div>
                                <br />
                                <div class="form-group" align="center">
                                    <button type="submit" class="btn btn-primary">Submit</button>
                                    <a href="Dashboard" class="btn btn-primary">Cancel</a>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
