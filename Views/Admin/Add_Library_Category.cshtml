@model Wanc.Models.Category
@{
    ViewBag.Title = "Add_Library_Category";
    Layout = "~/shared/_AdminLayout1.cshtml";
}

<section class="wrapper">

    <div class="breadcrumb-line">
        <ul class="breadcrumb">
            <li><a href="/Admin/Dashboard">Dashboard</a></li>
            <li class="active"><a href="#">Add Category</a></li>
        </ul>
    </div>
    <div class="form-horizontal">
        <div class="row">
            <div class="col-md-8">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-body">Add New Category</h3>
                    </div>
                    <div class="panel-body">
                        @using (Html.BeginForm("Add_Library_Category", "Admin", FormMethod.Post, new { @enctype = "multipart/form-data" }))
                        {
                            <form>
                                @Html.AntiForgeryToken()
                                <label class="danger" style="color:blue;font-size:13px">@TempData["msg"]</label>

                                <div class="form-group">
                                    <label class="col-md-4">Enter Category Name:</label>
                                    <div class="col-md-8">
                                        @Html.TextBoxFor(a => a.Name, new { @class = "form-control", @required = "required" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-md-4">Enter Description:</label>
                                    <div class="col-md-8">
                                        @Html.TextBoxFor(a => a.Description, new { @class = "form-control" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-md-4">Enter Image:</label>
                                    <div class="col-md-8">
                                        @Html.TextBoxFor(a => a.Image, new { @class = "form-control", @type = "File", @required = "required" })
                                    </div>
                                </div>

                                <div class="form-group" align="center">
                                    <button type="submit" class="btn btn-primary">Submit</button>
                                    <a href="/admin/Dashboard" class="btn btn-primary">Cancel</a>
                                </div>
                            </form>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
