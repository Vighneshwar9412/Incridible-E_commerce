@model Wanc.Models.BannerDto
@{
    ViewBag.Title = "AddBanner";
    Layout = "~/shared/_AdminLayout1.cshtml";
}

<section class="wrapper">
    <div>
        <ul class="breadcrumb" style="background: white;color: red;">
            <li>#  Banner Size Must Be Under 1230 * 425</li>
        </ul>
    </div>

    <div class="form-horizontal">
        <div class="row">
            <div class="col-md-12">

                <!-- Basic inputs -->
                <div class="panel panel-default">
                    <div class="panel-heading"><h6 class="panel-title" style="color:red"><i class="icon-bubble4"></i>@*@ViewBag.mode*@</h6></div>
                    <div class="panel-body">

                        @Html.AntiForgeryToken()
                        <form action="/Admin/AddBanner" method="post" enctype="multipart/form-data">
                            <label class="danger" style="color:blue;font-size:13px">@TempData["msg"]</label>
                            <div class="form-group">
                                <label class="col-sm-4 control-label">Upload Banner</label>

                                <div class="col-sm-8">
                                    <input type="file" class="form-control" name="file" required />
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-4 control-label">Add Url</label>
                                <div class="col-sm-8">
                                    <input type="text" class="form-control" name="Url" required />
                                </div>
                            </div>
                            <div class="form-actions text-right">
                                <button type="submit" class="btn btn-success btn-sm">Submit</button>
                                <a href="Dashboard" class="btn btn-primary btn-sm">Cancel</a>
                            </div>
                        </form>
                    </div>
                </div>
                <!-- /basic inputs -->
            </div>
        </div>
    </div>

</section>
