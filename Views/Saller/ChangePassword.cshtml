@{
    ViewBag.Title = "ChangePassword";
    Layout = "~/shared/sallerlayout.cshtml";
}

<section class="wrapper">
    <div class="page-header" style="margin-top:20px;">
        <div class="page-title">
            <h3>Setting</h3>
        </div>
    </div>
    <div class="breadcrumb-line">
        <ul class="breadcrumb">
            <li><a href="/Saller/Dashboard">Dashboard</a></li>
            <li class="active"><a href="#">Change Password</a></li>
        </ul>
        @if (TempData["MSG"] != null)
        {
            <h4 style="color:red;">@TempData["MSG"].ToString()</h4>
        }

    </div>

    <div class="form-horizontal">
        <div class="row">
            <div class="col-md-8">

                <div class="panel panel-default">
                    <div class="panel-body">
                        <form action="/saller/ChangePassword" method="post">
                            <div class="form-group">
                                <label class="col-sm-4 control-label">Enter Old Password </label>
                                <div class="col-sm-8">
                                    <input type="password" class="form-control" name="oldpassword" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-4 control-label">Enter New Password </label>
                                <div class="col-sm-8">
                                    <input type="password" class="form-control" name="Password" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-4 control-label">Enter Confirm Password </label>
                                <div class="col-sm-8">
                                    <input type="password" class="form-control" name="Confirm" />
                                </div>
                            </div>
                            <div class="form-actions text-right">
                                <input type="submit" class="btn btn-primary" value="Submit" />
                                <a href="/saller/Dashboard" class="btn btn-primary">Cancel</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
