@model Wanc.Models.SubcategoryDto
@{
    ViewBag.Title = "EditSubcategory";
    Layout = "~/shared/sallerlayout.cshtml";
}

<section class="wrapper">
    <div class="page-header" style="margin-top:20px;">
        <div class="page-title">
            <h3>Edit SubCategory</h3>
        </div>
    </div>
    <div class="breadcrumb-line">
        <ul class="breadcrumb">
            <li><a href="/Saller/Dashboard">Dashboard</a></li>
            <li class="active"><a href="#">Edit  SubCategory</a></li>
        </ul>
    </div>
    <div class="form-horizontal">
        <div class="row">
            <div class="col-md-8">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-body" style="font-weight:bold">Add New SubCategory</h3>
                    </div>
                    <div class="panel-body">
                        @using (Html.BeginForm("EditSubcategory", "Saller", FormMethod.Post))
                        {
                            <form>
                                @Html.AntiForgeryToken()
                                @Html.HiddenFor(a => a.id)
                                @Html.HiddenFor(a => a.UpdateBy)
                                @Html.HiddenFor(a => a.SelleroradminId)
                                <div class="form-group">
                                    <label class="col-md-4">Enter Delivery Pin:</label>
                                    <div class="col-md-8">
                                        <input type="text" name="DeliveryPin" value="@Model.DeliveryPin" class="form-control" maxlength="6" oninput="this.value = this.value.replace(/[^0-9.]/g, ''); this.value = this.value.replace(/(\..*)\./g, '$1');" required />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-md-4">Select  Category:</label>
                                    <div class="col-md-8">
                                        @Html.DropDownListFor(a => a.catid, new SelectList(ViewBag.Cate, "ID", "Name"), new { @class = "form-control", @required = "required" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-md-4">Enter SubCategory:</label>
                                    <div class="col-md-8">
                                        <input type="text" name="subcategorname" value="@Model.subcategorname" class="form-control" required />
                                    </div>
                                </div>
                                <br />
                                <div class="form-group" align="center">
                                    <button type="submit" class="btn btn-primary">Submit</button>
                                    <a href="/saller/Dashboard" class="btn btn-primary">Cancel</a>
                                </div>
                            </form>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

