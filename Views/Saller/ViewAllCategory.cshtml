@model IEnumerable<Wanc.Models.Category>
@{
    ViewBag.Title = "ViewAllCategory";
    Layout = "~/shared/sallerlayout.cshtml";
}

<style>
    th {
        text-align: center;
    }

    td {
        text-align: center;
    }
</style>
<section class="wrapper">
    <div class="breadcrumb-line">
        <ul class="breadcrumb">
            <li><a href="/Saller/Dashboard">Dashboard</a></li>
            <li class="active"><a href="#">View All Category</a></li>
        </ul>
    </div>
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title" style="font-weight:bold;padding-top:15px;">View All Category</h3>
        </div>
        <div class="panel-body" style="overflow-x:scroll;">

            <!-- /breadcrumbs line -->
            <!-- Form components -->
            <div class="tab-content">

                <!-- First tab -->
                <div class="tab-pane active fade in" id="inside_panel">

                    <!-- Default table -->
                    <div class="panel panel-default">
                        <div class="table-responsive">
                            <table class="table" id="sarvesh">
                                <thead>
                                    <tr>
                                        <th>S. No</th>
                                        <th>Category Name</th>
                                        <th>Description</th>
                                        <th>Image</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{ int i = 0;}
                                    @foreach (var item in Model)
                                    {
                                        i = i + 1;
                                        <tr>
                                            <td>@i</td>
                                            <td>@item.Name</td>
                                            <td>@item.Description</td>
                                            <td><img src="/CategoryImage/@item.Image" style="width:100px; height:100px" class="" /></td>
                                            <td>
                                                @*<a href="/Saller/Editcategory?Id=@item.ID" onclick="return confirm('Are you sure to Edit?');" class="btn btn-success">Edit</a>*@
                                            <a href="DelCategory?Id=@item.ID" onclick="return confirm('Are you sure to Delete?');" class="btn btn-danger">Delete</a>
                                        </td>
                                    </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <!-- /default table -->
                </div>
                <!-- /form components -->
                <!-- Footer -->


            </div>
        </div>
    </div>
</section>
