@model Wanc.Models.BrandDto
@{
    ViewBag.Title = "AddNewBrand";
    Layout = "~/shared/sallerlayout.cshtml";
}

<section class="wrapper">
    <div class="breadcrumb-line">
        <ul class="breadcrumb">
            <li><a href="/Saller/Dashboard">Dashboard</a></li>
            <li class="active"><a href="#">Add Brand</a></li>
        </ul>
    </div>

    <!-- /breadcrumbs line -->
    <!-- Form components -->
    <div class="form-horizontal">
        <div class="row">
            <div class="col-md-12">

                <!-- Basic inputs -->
                <div class="panel panel-default">
                    <div class="panel-heading"><h6 class="panel-title" style="color:red"><i class="icon-bubble4"></i>@*@TempData["msg"]*@</h6></div>
                    <div class="panel-body">

                        @Html.AntiForgeryToken()
                        <form action="~/Saller/AddNewBrand" method="post" enctype="multipart/form-data">
                            <label class="danger" style="color:blue;font-size:13px">@TempData["msg"]</label>
                            @*<div class="form-group">
                                    <label class="col-md-4">Enter Delivery Pin:</label>
                                    <div class="col-md-8">
                                        @Html.DropDownListFor(a => a.DeliveryPin, new SelectList(ViewBag.pin, "Pinid", "Pincode"), new { @class = "form-control", @required = "required" })
                                    </div>
                                </div>*@
                            <div class="form-group">
                                <label class="col-md-4">Enter Brand Name :</label>
                                <div class="col-md-8">
                                    <input type="text" name="BrandName" class="form-control">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-4">Upload Brand Image :</label>
                                <div class="col-md-8">
                                    <input type="file" class="form-control" name="file" required />
                                </div>
                            </div>
                            <div class="form-actions text-right">
                                <button type="submit" class="btn btn-primary">Submit</button>
                                <a href="/saller/Dashboard" class="btn btn-primary">Cancel</a>
                            </div>
                        </form>
                    </div>
                </div>
                <!-- /basic inputs -->
            </div>
        </div>
    </div>

</section>
